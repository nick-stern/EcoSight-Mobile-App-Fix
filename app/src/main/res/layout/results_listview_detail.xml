<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="City"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/PlantImageResult"
        app:layout_constraintEnd_toStartOf="@+id/latTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:text="lat"
        app:layout_constraintBottom_toTopOf="@+id/PlantImageResult"
        app:layout_constraintEnd_toStartOf="@+id/longTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cityTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longTextView"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:text="longitude"
        app:layout_constraintBottom_toTopOf="@+id/PlantImageResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/latTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/PlantImageResult"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="64dp"
        android:rotation="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>